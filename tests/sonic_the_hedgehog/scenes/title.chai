auto title = engine.stage.create_scene()

title.init = fun(){

    auto main_camera = title.create_camera(title.core.video.window.get_size())
    title.set_camera("main_camera", main_camera)


    auto sega_logo = title.create_actor()

    sega_logo.init = fun(){
        auto window_size = sega_logo.core.video.window.get_size();

        sega_logo.add_model("sega_logo",
                        vec3(0.0f, 0.0f, 0.0f),
                        vec3(-100.0f * 640.0f/320.0f, -100.0f*480.0f/224.0f, 0.0f),
                        "sega_logo.json");
    }

    sega_logo.deinit = fun(){}
    sega_logo.logic  = fun(){}


    title.add_actor("sega_logo", sega_logo)

    sega_logo.init()

}

title.deinit = fun(){
    
}

title.logic  = fun(){
    
}

engine.stage.add_scene("title", title)
engine.stage.load_scene("title")



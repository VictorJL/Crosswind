var main_scene := stage.create_scene()

var init = fun[main_scene](){
    auto window_size := core.video.window.get_size()
    auto main_camera := stage.create_camera(window_size)
    main_scene.add_camera("main_camera", main_camera)


    var size := core.video.window.get_size()

    var fb := use("scripts/actors/file_browser.chai")(vec3(0.0f, 0.0f, 0.0f), vec3(190.0f, 100.0f, 0.0f), fun(){
        puts("Trigger\n")
    })

    main_scene.add_group("fb", fb)
}

var deinit = fun[main_scene](){

}

var logic  = fun[main_scene](delta){
}

main_scene.construct(init, deinit, logic)

stage.add_scene("main_scene", main_scene)
stage.load_scene("main_scene")

var main_scene := stage.create_scene()

var init = fun[main_scene](){
    auto window_size := core.video.window.get_size()
    auto main_camera := main_scene.create_camera(window_size)
    main_scene.set_camera("main_camera", main_camera)

    var size := core.video.window.get_size()

    use("scripts/actors/main_scene/texture_panel.chai")
    use("scripts/actors/main_scene/canvas.chai")
    use("scripts/actors/main_scene/properties_panel.chai")

    main_scene.add_actor("texture_panel", texture_panel)
    main_scene.add_actor("properties_panel", properties_panel)
    main_scene.add_actor("canvas", canvas)

    main_scene.load_actor("texture_panel")
    main_scene.load_actor("properties_panel")
    main_scene.load_actor("canvas")
}

var deinit = fun[main_scene](){

}

var logic  = fun[main_scene](delta){

}

main_scene.construct(init, deinit, logic)

stage.add_scene("main_scene", main_scene)
stage.load_scene("main_scene")

class control{
    attr widget

    def control(origin, size, name, model){
        this.widget := stage.create_actor()
        this.widget.set_origin(origin)
        this.widget.set_size(size)

        this.widget.add_model("button", origin, size, "button.json")
    }

    def set_text(new_text){
        this.widget.remove_text("text")
        var text_color := vec3(1.0f, 1.0f, 1.0f)
        this.widget.add_text("text", new_text, this.widget.get_origin, text_color, 24)
    }

    def get(){
        return this.widget
    }

}

return fun(origin, size, name, model){
    return control(origin, size, name, model)
}
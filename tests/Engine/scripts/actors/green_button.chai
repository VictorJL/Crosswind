return fun(origin, size){
    var button := stage.create_actor()

    button.add_model("button",
        origin,
        size,
        "green_button.json")

    button.set_origin(origin)
    button.set_size(size)

    button.construct(fun(){}, fun(){}, fun[button, core](delta){

        var current_camera := stage.get_scene("current").get_camera("current")
        var mouse_coordinates := core.input.get_mouse_coordinates()
        var m_x := mouse_coordinates.x
        var m_y := mouse_coordinates.y

        var world_coordinates := current_camera.convert_screen_to_world(mouse_coordinates)

        var mouse_x = world_coordinates.x
        var mouse_y = world_coordinates.y

        var x = button.get_origin().x
        var y = button.get_origin().y

        var w = button.get_size().x
        var h = button.get_size().y

        if(mouse_x >= x - w / 2.0f && mouse_x <= x + w / 2.0f && mouse_y >= y + h / 2.0f && mouse_y <= y - h / 2.0f){

            if(core.input.is_key_down("mouse_left")){
                puts("Mouse down\n")
                button.get_model("button").change_animation("button_on")
            } else {
                puts("Mouse over\n")

                button.get_model("button").change_animation("button_off")
            }
        } else {
            button.get_model("button").change_animation("button_off")
        }
    });

    return button
}


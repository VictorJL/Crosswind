var texture_panel := stage.create_actor()

var window_size := core.video.window.get_size()

var panel_size   := vec3(window_size.x/3.0f, window_size.y/2.0f, 0.0f)
var panel_origin := vec3(window_size.x/2.0f - panel_size.x / 2.0f, window_size.y/2.0f - panel_size.y /2.0f, 0.0f)

panel_origin.x *= -1.0f

texture_panel.add_model("glass_window",
                        panel_origin,
                        panel_size,
                        "cristal_panel.json")

texture_panel.set_origin(panel_origin)
texture_panel.set_size(panel_size)

return texture_panel
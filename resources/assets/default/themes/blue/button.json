{
    "default-size": [32, 16, 0],
    "draggable": false,
    "text-color": [255, 255, 255],
    
    "textures":
    {
      "mouse_up":["textures/button/blue_button_off.png"],
      "mouse_down":["textures/button/blue_button_on.png"]
    },

    "events":
    {
      "on_mouse_up":
      {
        "action" : "switch", 
        "target" : "texture", 
        "value" : "mouse_up"
      },

      "on_mouse_down":
      {
        "action" : "switch", 
        "target" : "texture",
        "value" : "mouse_down"
      },

    }
}   